<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        tools:context=".EditionActivity">

        <TextView
            android:id="@+id/idEt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp" />

        <EditText
            android:id="@+id/nameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:textColor="@color/colorPrimary1"
            android:textSize="18sp"
            android:textStyle="italic"
            tools:ignore="LabelFor"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/nazwa_licznika"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="10dp" />

        <EditText
            android:id="@+id/unitEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:textColor="@color/colorPrimary1"
            android:textSize="18sp"
            android:textStyle="italic"
            tools:ignore="LabelFor"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/jednostka"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/upEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textColor="@color/colorPrimary1"
                android:textSize="18sp"
                android:textStyle="italic"
                android:layout_marginRight="10dp" />

            <EditText
                android:id="@+id/sumEt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:hint="@string/wpisz"
                android:textColor="@color/colorPrimary1"
                android:textSize="18sp"
                android:textStyle="italic"
                tools:ignore="LabelFor"
                android:layout_marginRight="10dp" />

            <Button
                android:id="@+id/plusBtn1"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_marginEnd="20dp"
                android:background="@color/colorWhite"
                android:text="@string/plus"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:layout_marginRight="20dp" />

            <Button
                android:id="@+id/delBtn1"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:background="@color/colorWhite"
                android:text="@string/del"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/suma2"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/cpEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textColor="@color/colorPrimary1"
                android:textSize="18sp"
                android:textStyle="italic"
                tools:ignore="LabelFor"
                android:layout_marginRight="10dp" />

            <EditText
                android:id="@+id/sumEt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:hint="@string/wpisz"
                android:textColor="@color/colorPrimary1"
                android:textSize="18sp"
                android:textStyle="italic"
                tools:ignore="LabelFor"
                android:layout_marginRight="10dp" />

            <Button
                android:id="@+id/plusBtn2"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_marginEnd="20dp"
                android:background="@color/colorWhite"
                android:text="@string/plus"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:layout_marginRight="20dp" />

            <Button
                android:id="@+id/delBtn2"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:background="@color/colorWhite"
                android:text="@string/del"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/suma1"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="10dp" />


        <TextView
            android:id="@+id/vatEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorPrimary1"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_marginLeft="10dp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:max="100" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/vat"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/dayEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/colorPrimary1"
            android:textSize="18sp"
            android:textStyle="italic" />

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:max="28"
            android:min="1"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/day"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEt1"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:background="@color/colorWhite"
                android:text="@string/noOk"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                tools:ignore="ButtonStyle"
                android:layout_marginRight="10dp" />

            <Button
                android:id="@+id/btnEt"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:background="@color/colorWhite"
                android:text="@string/ok"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/uwaga"
            android:textColor="@color/colorWhite" />

    </LinearLayout>
</ScrollView>